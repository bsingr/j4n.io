{
  "name": "j4n.io",
  "description": "RESTful shortlink service",
  "author": "Jan Heuermann",
  "license": "MIT",
  "homepage": "https://github.com/jotaen/j4n.io",
  "scripts": {
    "start": "node ./app/http/serve.js",
    "pretest": "npm run --silent linter",
    "test": "npm run unit-tests && npm run integration-tests",
    "dev-mode": "USERNAME=admin PASSWORD=a npm start -- --verbose --db 192.168.99.100:32768",
    "linter": "./node_modules/.bin/eslint app test ./app/http/serve.js",
    "coverage": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- test/unit test/integration",
    "unit-tests": "./node_modules/.bin/mocha test/unit",
    "integration-tests": "./node_modules/.bin/mocha test/integration",
    "system-tests": "./node_modules/.bin/mocha test/system --delay",
    "statistics": "echo \"Lines of code:\\n\" && find app/ -name \"*.js\" | xargs wc -l"
  },
  "dependencies": {
    "basic-auth": "^1.0.3",
    "express": "^4.13.4",
    "joi": "^8.0.5",
    "mongodb": "^2.1.16",
    "morgan": "^1.6.1",
    "randomstring": "^1.1.4"
  },
  "devDependencies": {
    "codeclimate-test-reporter": "^0.3.1",
    "eslint": "^1.10.3",
    "istanbul": "^0.4.2",
    "mocha": "^2.4.5",
    "supertest": "^1.1.0"
  }
}
